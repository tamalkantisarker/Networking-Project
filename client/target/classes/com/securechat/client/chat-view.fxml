<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="700.0" prefWidth="1000.0" styleClass="main-bg" stylesheets="@premium.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.securechat.client.ClientController">
   <children>
      <BorderPane>
         <top>
             <HBox spacing="25" alignment="CENTER_LEFT" styleClass="top-bar">
                 <Label text="SecureChat" style="-fx-font-weight: 900; -fx-font-size: 20px;"/>
                 <Region prefWidth="30" />
                 <Label text="Logged in as: " styleClass="secondary-label"/>
                 <Label fx:id="currentUserLabel" style="-fx-font-weight: 700;"/>
                 <Region HBox.hgrow="ALWAYS" />
                 <ComboBox fx:id="statusComboBox" prefWidth="180.0" promptText="Availability" styleClass="retina-input"/>
             </HBox>
         </top>
         <center>
            <HBox spacing="0">
               <children>
                 <VBox spacing="15.0" styleClass="sidebar" maxWidth="260" minWidth="240" style="-fx-padding: 25;">
                    <Label text="GROUPS" style="-fx-font-weight: 800; -fx-text-fill: #8E8E93; -fx-font-size: 11px; -fx-letter-spacing: 1.2px;"/>
                    <ListView fx:id="groupList" VBox.vgrow="ALWAYS" />
                    <Button text="+ Create Group" maxWidth="Infinity" onAction="#handleCreateGroup" styleClass="retina-button-secondary"/>
                 </VBox>
                  <VBox spacing="20.0" HBox.hgrow="ALWAYS" style="-fx-padding: 30; -fx-background-color: #FFFFFF;">
                     <Label text="SYSTEM ACTIVITY" style="-fx-font-weight: 800; -fx-text-fill: #8E8E93; -fx-font-size: 11px; -fx-letter-spacing: 1.2px;"/>
                     <ListView fx:id="chatListView" VBox.vgrow="ALWAYS" />
                  </VBox>
                  <VBox spacing="15.0" maxWidth="280.0" prefWidth="240.0" styleClass="sidebar" style="-fx-border-width: 0 0 0 1; -fx-padding: 25;">
                     <Label text="CONTACTS" style="-fx-font-weight: 800; -fx-text-fill: #8E8E93; -fx-font-size: 11px; -fx-letter-spacing: 1.2px;"/>
                     <ListView fx:id="userListView" VBox.vgrow="ALWAYS" />
                  </VBox>
               </children>
            </HBox>
         </center>
      </BorderPane>
   </children>
</StackPane>
